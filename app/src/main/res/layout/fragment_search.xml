<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Search Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <!-- Departure Station Input -->
    <EditText
        android:id="@+id/etDeparture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter departure station name"
        android:background="@drawable/search_background"
        android:padding="12dp"
        android:textSize="16sp" />

    <!-- Destination Station Input -->
    <EditText
        android:id="@+id/etDestination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter destination station name"
        android:background="@drawable/search_background"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:textSize="16sp" />

    <!-- List of Stations -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select departure station from your nearest"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lvStations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />
</LinearLayout>